{
  "name": "user-service",
  "version": "1.0.0",
  "description": "User micro-service",
  "main": "index.js",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "build:dev": "tsc && copyfiles -f src/cert/*.crt dist/src/cert && copyfiles -f src/cert/*.key dist/src/cert && copyfiles -f package.json dist",
    "start:dev": "NODE_ENV=dev node dist/src/index.js",
    "build:prod": "tsc",
    "start:prod": "copyfiles -f /app/src/cert/user-service.key /app/dist/src/cert/ && NODE_ENV=production node dist/src/index.js",
    "prepare": "npm run build:prod",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Bernardo Rodrigues",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@types/pg": "^7.14.11",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "copyfiles": "^2.4.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "https": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.6.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {}
}
